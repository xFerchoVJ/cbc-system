<div class="border shadow p-3 m-3">
  <h1 class="text-center mt-4">Inicia Sesion <% if current_page?(new_admin_session_path) %>Administrador<% end %></h1>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field mb-2">
      <%= f.label :email, class: "form-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="field mb-2">
      <%= f.label :password, class: "form-label" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-check mt-2">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me, class: "form-check-label" %>
      </div>
    <% end %>

    <div class="d-flex mt-2 gap-3">
      <%= f.submit "Ingresar", class: "btn btn-outline-primary"%>
      <% if current_page?(new_admin_session_path) %>
        <%= link_to 'Regresar a la pÃ¡gina principal', root_path, class: "btn btn-outline-primary"%>
      <% end %>
    </div>
  <% end %>
  <% if !current_page?(new_admin_session_path) %>
    <%= render "devise/shared/links" %>
  <% end %>
</div>
