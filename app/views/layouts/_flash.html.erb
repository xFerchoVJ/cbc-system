<% flash.each do |type, msg|%>
  <div class="alert <%= type == 'notice' ? 'alert-success' : 'alert-warning'%> alert-dismissible fade show" role="alert">
    <strong><%= msg %></strong>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
